@model KartaPracy.Models.Kontakt

@{
    ViewBag.Title = "Dodaj nowy kontakt";

}


<h2>Dodaj kontakt</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.SklepId, new { htmlAttributes = new { @class = "form-control" } })

        <div class="form-group">
            @Html.LabelFor(model => model.Nazwisko)
            @Html.TextBoxFor(model => model.Nazwisko, new {@class = "form-control"})
            @Html.ValidationMessageFor(model => model.Nazwisko, "", new {@class = "text-danger"})
        </div>
        <div class="form-group">
            @Html.LabelFor(s => s.Imie)
            @Html.TextBoxFor(s => s.Imie, new { @class = "form-control" })
        </div>
            <div class="form-group">
                @Html.LabelFor(s => s.Telefon)
                @Html.TextBoxFor(s => s.Telefon, new { @class = "form-control" })
                @Html.ValidationMessageFor(s => s.Telefon)
            </div>
            <div class="form-group">
                @Html.LabelFor(s => s.Email)
                @Html.TextBoxFor(s => s.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(s => s.Email)
            </div>

           
            <div class="form-group">
                @Html.LabelFor(s => s.Opis)
                @Html.TextAreaFor(s => s.Opis, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div >
               <button type="submit" class="btn btn-primary">Zapisz</button>
                @Html.ActionLink("Wróć", "Index", null, new { @class = "btn btn-warning" })
            </div>

        </div>
    }
<div>
   
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}